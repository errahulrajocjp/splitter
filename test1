@Test
void testCheck5GCoverageForAddresses_AddressSkippedMissingFields() {
    // Setup - When ANY address has missing required fields, the entire request fails validation
    FiveGCoverageCheckRequest request = new FiveGCoverageCheckRequest();
    List<CustomerAddress> addresses = new ArrayList<>();

    CustomerAddress validAddress = new CustomerAddress();
    validAddress.setAddressLine1("123 Main St");
    validAddress.setZipCode("10001");

    CustomerAddress invalidAddress = new CustomerAddress();
    invalidAddress.setAddressLine1(null);  // Missing required field
    invalidAddress.setZipCode("20002");

    addresses.add(validAddress);
    addresses.add(invalidAddress);
    request.setCustomerAddress(addresses);

    // NO need to mock splitAddress - validation fails before reaching that point

    // Execute - Upfront validation fails, returns error response
    StepVerifier.create(validateBusinessAccountHelper.check5GCoverageForAddresses(request))
            .assertNext(response -> {
                assertNotNull(response);
                assertNotNull(response.getData());
                // Validation fails upfront - FAILURE_STATUS
                assertEquals(SmbConstants.FAILURE_STATUS, response.getData().getStatusCode());
                // Errors populated with validation message
                assertNotNull(response.getData().getErrors());
                assertFalse(response.getData().getErrors().isEmpty());
                // Response is null on validation error
                assertNull(response.getData().getResponse());
            })
            .verifyComplete();
}
